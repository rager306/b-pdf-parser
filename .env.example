# Source PDF directory containing bank statements to parse
SOURCE_PDF_DIR=source-pdf

# Output directory for parsed CSV files
OUTPUT_DIR=output

# Test PDFs directory for benchmark testing (1000+ synthetic files)
TEST_PDFS_DIR=test-pdfs

# Enable turnover verification - compares PDF summary totals against calculated sums
# When enabled, the verification results will be included in parse_pdf output
# Set to 'true' to enable globally, 'false' to disable (default: disabled)
VERIFY_TURNOVER=false
